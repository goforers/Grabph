<?xml version="1.0" encoding="utf-8"?>
<com.goforer.base.presentation.view.customs.layout.SwipeCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_feed_info_layout"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/disconnect_container_pinned_feed_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_disconnect_pinned_feed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_disconnect"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_144"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_disconnect_pinned_feed_info"
            android:id="@+id/tv_notice1_pinned_feed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="44dp"
            android:textColor="@color/grayLight"
            android:text="@string/not_connected_internet"
            android:visibility="gone"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice1_pinned_feed_info"
            android:id="@+id/tv_notice2_pinned_feed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/grayLight"
            android:text="@string/check_connection"
            android:visibility="gone"
            android:textSize="24sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleGravity="bottom|start"
            app:expandedTitleMarginBottom="4dp"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleTextAppearance="@style/CollapsingToolbar.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="true"
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/backdrop_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.goforer.base.presentation.view.customs.imageview.ThreeTwoImageView
                        android:id="@+id/iv_feed_info_photo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:adjustViewBounds="true"
                        android:fitsSystemWindows="true"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_play_btn_feed_info"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:alpha="0.8"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_play_btn"/>

                    <com.mikepenz.materialdrawer.view.BezelImageView
                        android:id="@+id/iv_price_bg"
                        android:layout_width="@dimen/width_56"
                        android:layout_height="@dimen/height_56"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginEnd="@dimen/margin_18"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:elevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:background="@drawable/price_circle_mask"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_33"
                        android:layout_marginBottom="@dimen/margin_26"
                        android:textAppearance="@android:style/TextAppearance.Material.Headline"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_54"
                        android:layout_marginBottom="@dimen/margin_33"
                        android:textAppearance="@android:style/TextAppearance.Material.Headline"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/dollar_symbol"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/feed_searper_holder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_132"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:elevation="@dimen/elevation_2"
                    android:background="@color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/backdrop_container">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/searper_pic_holder"
                        android:layout_width="@dimen/width_46"
                        android:layout_height="@dimen/height_46"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        android:background="@drawable/border_rounded_grade_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.mikepenz.materialdrawer.view.BezelImageView
                            android:id="@+id/iv_searper_pic"
                            android:layout_width="@dimen/width_38"
                            android:layout_height="@dimen/height_38"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="@drawable/border_searper_pic"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_searper_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_27"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLength="12"
                        android:textAppearance="@android:style/TextAppearance.Material.Headline"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/searper_pic_holder"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/iv_like"
                        android:layout_width="@dimen/width_24"
                        android:layout_height="@dimen/height_21"
                        android:layout_marginTop="@dimen/margin_27"
                        android:layout_marginEnd="@dimen/margin_52"
                        android:background="@drawable/btn_favorite_selector"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/iv_comment"
                        android:layout_width="@dimen/width_24"
                        android:layout_height="@dimen/height_21"
                        android:layout_marginTop="@dimen/margin_27"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:background="@drawable/ic_comment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/feed_photo_favorite_holder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_32"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@color/transparent"
                        android:elevation="@dimen/elevation_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_comment">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_136"
                            android:gravity="center"
                            android:maxLength="12"
                            android:textAppearance="@android:style/TextAppearance.Material.Headline"
                            android:textColor="@color/colorDarkGray1"
                            android:textSize="@dimen/text_size_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_like_phrase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="@dimen/margin_4"
                            android:layout_marginTop="@dimen/margin_10"
                            android:gravity="center"
                            android:maxLength="12"
                            android:text="@string/like"
                            android:textAppearance="@android:style/TextAppearance.Material.Headline"
                            android:textColor="@color/colorDarkGray1"
                            android:textSize="@dimen/text_size_12"
                            app:layout_constraintStart_toEndOf="@+id/tv_like_count"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:gravity="center"
                            android:maxLength="12"
                            android:textAppearance="@android:style/TextAppearance.Material.Headline"
                            android:textColor="@color/colorDarkGray1"
                            android:textSize="@dimen/text_size_12"
                            app:layout_constraintStart_toEndOf="@+id/tv_like_phrase"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_comment_phrase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="@dimen/margin_4"
                            android:layout_marginTop="@dimen/margin_10"
                            android:gravity="center"
                            android:maxLength="12"
                            android:text="@string/comment"
                            android:textAppearance="@android:style/TextAppearance.Material.Headline"
                            android:textColor="@color/colorDarkGray1"
                            android:textSize="@dimen/text_size_12"
                            app:layout_constraintStart_toEndOf="@+id/tv_comment_count"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:background="@color/colorQuestInfoDivider"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feed_photo_favorite_holder" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- As our statusBar is transparent below and content is moved behind our toolbar has to include the padding on top so we use this area -->
            <androidx.appcompat.widget.Toolbar
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextAppearance="@style/TransparentToolbar.Title"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="false"
                android:elevation="0dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_feed_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textAppearance="@android:style/TextAppearance.Material.Headline"
                    android:layout_marginStart="@dimen/margin_16"
                    android:textColor="@color/whiteLight"
                    android:textSize="@dimen/text_size_20"
                    android:maxLength="68"
                    android:ellipsize="end"
                    android:textStyle="normal" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/scroll_view"
        android:transitionGroup="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/feed_info_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:transitionGroup="true"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorPrimary"
                android:id="@+id/feed_explanation_cardholder"
                android:layout_marginTop="@dimen/margin_16"
                android:transitionName="feed_explanation_cardholder"
                android:transitionGroup="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="@dimen/elevation_0"
                tools:cardPreventCornerOverlap="false">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_feed_explanation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_18"
                    android:textAppearance="@android:style/TextAppearance.Material.Headline"
                    android:textColor="@color/colorQuestInfoDescription"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    app:autoSizeTextType="uniform" />

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/colorQuestInfoDivider"
                android:gravity="center" />

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorPrimary"
                android:id="@+id/feed_license_holder"
                android:transitionName="license_holder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_59"
                android:layout_gravity="center"
                android:elevation="@dimen/elevation_0"
                tools:cardPreventCornerOverlap="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_license_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:text="@string/license"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_license1"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginEnd="@dimen/margin_176"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_license1_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_license2"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginEnd="@dimen/margin_136"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_license2_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_license3"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginEnd="@dimen/margin_96"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_license3_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_license4"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginEnd="@dimen/margin_56"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_license4_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_license5"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_21"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_license5_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/colorQuestInfoDivider"
                android:gravity="center" />

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorPrimary"
                android:id="@+id/feed_size_holder"
                android:transitionName="license_holder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_59"
                android:layout_gravity="center"
                android:elevation="@dimen/elevation_0"
                tools:cardPreventCornerOverlap="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/iv_size_small"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_12"
                        android:background="@drawable/btn_size_small_selector"
                        android:text="@string/s"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/btn_size_small_text_color_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/iv_size_medium"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginStart="@dimen/margin_60"
                        android:layout_marginBottom="@dimen/margin_12"
                        android:background="@drawable/btn_size_small_selector"
                        android:text="@string/m"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/btn_size_small_text_color_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/iv_size_xl"
                        android:layout_width="@dimen/width_30"
                        android:layout_height="@dimen/height_30"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginStart="@dimen/margin_104"
                        android:layout_marginBottom="@dimen/margin_12"
                        android:background="@drawable/btn_size_small_selector"
                        android:text="@string/xl"
                        android:textColor="@color/btn_size_small_text_color_selector"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:layout_marginStart="@dimen/margin_144"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:text="@string/size"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_size_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_16"
                        android:text="@string/price"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/text_size_18"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/colorQuestInfoDivider"
                android:gravity="center"
                android:visibility="gone" />

            <com.ramotion.foldingcell.FoldingCell
                xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
                android:id="@+id/folding_photo_info_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                folding-cell:additionalFlipsCount="0"
                folding-cell:animationDuration="1400"
                folding-cell:backSideColor="@color/colorBackSlide"
                folding-cell:cameraHeight="30">

                <!-- CONTENT (UNFOLDED) LAYOUT (MUST BE AT LEAST 2x times BIGGER than content layout bellow)-->
                <include layout="@layout/cell_photo_info" />

                <!-- TITLE (FOLDED) LAYOUT (MUST BE AT LEAST 2x times SMALLER than content layout above) -->
                <include layout="@layout/cell_portion_photo_info" />

            </com.ramotion.foldingcell.FoldingCell>

            <View
                android:id="@+id/divider_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5"
                android:layout_marginTop="@dimen/margin_13"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/colorQuestInfoDivider"
                android:gravity="center"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorPrimary"
                android:id="@+id/place_cardholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_2"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginTop="4dp"
                android:elevation="@dimen/elevation_4"
                android:transitionGroup="true"
                tools:cardPreventCornerOverlap="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_place_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:text="@string/place"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_view_map"
                        android:layout_width="@dimen/width_24"
                        android:layout_height="@dimen/height_24"
                        android:src="@drawable/ic_view_google_map"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_12"
                        tools:ignore="ContentDescription"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <fragment
                        android:id="@+id/map"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_440"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/margin_12"
                        app:cameraZoom="15"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_place_title"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/recommend"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feed_info_linear_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_feed_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_marginTop="@dimen/margin_4"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@color/transparent"
                android:scrollbarSize="@dimen/size_6"
                android:orientation="vertical"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recommend_title" />

            <View
                android:id="@+id/view_last"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/colorQuestInfoDivider"
                android:gravity="center" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_purchase"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/purchase"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:background="@drawable/btn_purchase_selector"
        android:layout_gravity="center_horizontal|bottom"
        app:layout_anchorGravity="top"
        app:layout_behavior="com.goforer.base.presentation.view.behavior.BottomButtonBehavior" />

</com.goforer.base.presentation.view.customs.layout.SwipeCoordinatorLayout>